<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation=
		"http://java.sun.com/xml/ns/javaee 
		http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>MvnBookTP04</display-name>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
      <servlet-name>AddUserServlet</servlet-name>
      <servlet-class>com.fhzheng.demo.tp04.servlet.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>AddUserServlet</servlet-name>
      <url-pattern>/addUserServlet</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>DeleteUserServlet</servlet-name>
      <servlet-class>com.fhzheng.demo.tp04.servlet.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>DeleteUserServlet</servlet-name>
      <url-pattern>/delUserServlet</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>EditUserServlet</servlet-name>
      <servlet-class>com.fhzheng.demo.tp04.servlet.EditUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>EditUserServlet</servlet-name>
      <url-pattern>/editUserServlet</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>SearchUserServlet</servlet-name>
      <servlet-class>com.fhzheng.demo.tp04.servlet.SearchUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>SearchUserServlet</servlet-name>
      <url-pattern>/searchUserServlet</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>SearchUsersServlet</servlet-name>
      <servlet-class>com.fhzheng.demo.tp04.servlet.SearchUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>SearchUsersServlet</servlet-name>
      <url-pattern>/searchUsersServlet</url-pattern>
    </servlet-mapping>
    
</web-app>
